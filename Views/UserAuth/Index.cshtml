
<div class="row">
    <div class="col-6">

        <form  id="loginForm">
            <div class="row">
                <div class="col-md-6">

                    <lable>UserName</lable>
                </div>
                <div class="col-md-6">

                    <input type="email" class="form-control" id="UserName" name="UserName" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">

                    <lable>Password</lable>
                </div>
                <div class="col-md-6">

                    <input type="Password" class="form-control" id="Password" name="Password" />
                </div>
            </div>
            <br />
            <hr />
            <br />
            <div row style="text-align:center">
                <button type="button" class="btn btn-info" id="Login">Login</button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" type="text/javascript"> </script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script type="text/javascript">
    $("#Login").click(function(){
        var user = $('#loginForm #UserName').val();
        var pass = $('#loginForm #Password').val();
        $.ajax({
            url: '/UserAuth/LogOn',
            type: 'POST',
            data: { userName: user, password: pass },
            dataType: 'JSON',
            success: function (data) {
                swal("Greate!", "Login Success! please Wait a second", "success")
               

            }
        });
    })

</script>