
<div class="row">
    <div class="col-6">

        @using (Html.BeginForm("SignUp", "UserAuth", FormMethod.Post, new { id = "frmSignup", enctype = "multipart/form-data" }))
        {
            <div class="group">
                <label for="email" class="label">Email Address<span class="required" style="font-size:large"></span></label>
                <input id="Email" type="email" class="input">
            </div>
            <div class="group">
                <label for="fIrstName" class="label">First Name<span class="required" style="font-size:large"></span></label>
                <input id="FirstName" type="text" class="input">
            </div>
            <div class="group">
                <label for="lastName" class="label">Last Name<span class="required" style="font-size:large"></span></label>
                <input id="LastName" type="text" class="input">
            </div>
            <div class="group">
                <label for="PasswordSignup" class="label">Password<span class="required" style="font-size:large"></span></label>
                <input id="PasswordSignup" type="password" class="input" data-type="password" min="8" max="20" placeholer="">
                <span class="text-danger" style="font-size:large">Must contain a number, Capital and small letter ,a special character with lenght 7-15</span>
            </div>
            <div class="group">
                <label for="Password" class="label">Repeat Password<span class="required" style="font-size:large"></span></label>
                <input id="PAssword2" type="password" class="input" data-type="password" min="8" max="20">
            </div>
            <div class="group" style="margin-bottom:-20px;">
                <div class=" row">
                    <div class="col-sm-6">
                        <label for="Contact" class="label">Contact<span class="required" style="font-size:large"></span></label>
                        <input id="Contact" type="text" class="input" max="20">

                    </div>
                    <div class="col-sm-6">
                        <label for="Address" class="label">Address</label>
                        <input id="Address" type="text" class="input" max="20">

                    </div>
                </div>
            </div>
            <br />
            <br />
            <div class="group" style="margin-bottom:-20px;">
                <a href="javascript:void(0);" id="btn-signupSubmit" class="button" value="Sign In" style="text-align:center;text-decoration:none">Sign In </a>
            </div>

           @* <div class="hr"></div>
            <div class="foot-lnk">
                <label for="tab-1">Already Member?</label>
            </div>*@
        }

    </div>
</div>

