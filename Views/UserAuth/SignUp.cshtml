<script type="text/javascript">
    $('#btn-signupSubmit').click(function () {

        var f = {};
        var UserName = $('#Email').val();
        var fIrstName = $('#FirstName').val();
        var LastName = $('#LastName').val();
        var Password = $('#PasswordSignup').val();
        var Password2 = $('#PAssword2').val();
        var Contact = $('#Contact').val();
        var Address = $('#Address').val();

        var passw = /^(?=.*[0-9])(?=.*[!@@#$%^&*])[a-zA-Z0-9!@@#$%^&*]{7,15}$/;
        if (Password.match(passw)) {

        }
        else {
            return swal("Error!", "Enter Valid Password!", "error");

        }
        if (Password != Password2 || Password < 4) {
            return swal("Error!", "Password not Matched!", "error");
        }
        else if (UserName == null || UserName < 3) {
            return swal("Error!", "Enter Valid Username!", "error");
        }
        if (fIrstName < 1) {
            return swal("Error!", "Please Enter First Name!", "error")
        }
        if (LastName < 1) {
            return swal("Error!", "Please Enter LastName!", "error")
        }
        if (Contact < 1) {
            return swal("Error!", "Please Enter COntact Information!!", "error")
        }



        $.ajax({
            type: 'POST',
            url: '/UserAuth/SignUp',
            data: { UserName: UserName, FirstName: fIrstName, LastName: LastName, Password: Password, Address: Address, Contact: Contact },
            dataType: 'json',
            success: function (data, strStatus) {

                var dat = parseInt(data)
                if (!isNaN(data)) {
                    swal("Greate!", "Signup Success!", "success");

                }
                else {
                    swal("Error!", data, "error")
                }
            },
            error: function () {
                swal("Error!", data, "error")
            }

        });


    })
               

</script>